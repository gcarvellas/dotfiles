# https://gitlab.com/Nmoleo/i3-volume-brightness-indicator
# https://gitlab.com/cameronnemo/brillo
# https://github.com/altindas/dots (only for dunst configuration)
bindsym XF86AudioRaiseVolume exec --no-startup-id /usr/bin/bash /usr/bin/volume_brightness.sh volume_up
bindsym XF86AudioLowerVolume exec --no-startup-id /usr/bin/bash /usr/bin/volume_brightness.sh volume_down
bindsym XF86AudioMute exec --no-startup-id /usr/bin/bash /usr/bin/volume_brightness.sh volume_mute
bindsym XF86MonBrightnessUp exec --no-startup-id /usr/bin/bash /usr/bin/volume_brightness.sh brightness_up
bindsym XF86MonBrightnessDown exec --no-startup-id /usr/bin/bash /usr/bin/volume_brightness.sh brightness_down

